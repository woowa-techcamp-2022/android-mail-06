<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_mail_profile"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundCorners" />

    <TextView
        android:id="@+id/text_mail_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_title"
        android:textSize="50sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_mail_profile"
        app:layout_constraintEnd_toEndOf="@id/img_mail_profile"
        app:layout_constraintStart_toStartOf="@id/img_mail_profile"
        app:layout_constraintTop_toTopOf="@+id/img_mail_profile" />

    <TextView
        android:id="@+id/text_mail_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_title"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_mail_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_mail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_title"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_mail_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_mail_from" />

    <TextView
        android:id="@+id/text_mail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_content"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_mail_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_mail_title" />


</androidx.constraintlayout.widget.ConstraintLayout>